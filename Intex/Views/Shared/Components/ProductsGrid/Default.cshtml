<script>

    // Add event handler for the "Apply Filter" button
    $('#applyFilterBtn').on('click', function () {
        var category = $('#categoryFilter').val(); // Replace with the appropriate element ID or class for the category filter
        var primaryColor = $('#primaryColorFilter').val(); // Replace with the appropriate element ID or class for the primary color filter
        var secondaryColor = $('#secondaryColorFilter').val(); // Replace with the appropriate element ID or class for the secondary color filter

        // Construct the URL with the selected filter values
        
        var url = '@Url.Action("Product", "Home", new { pageNum = 1, category = "__category__", primaryColor = "__primaryColor__", secondaryColor = "__secondaryColor__" })';
                url = url.replace("__category__", category)
                         .replace("__primaryColor__", primaryColor)
                         .replace("__secondaryColor__", secondaryColor);
        window.location.replace(url);
    });
	
	$('#clearFilterBtn').on('click', function () {
        // Reset the filter values to default
        $('#categoryFilter').val('All');
        $('#primaryColorFilter').val('All');
        $('#secondaryColorFilter').val('All');
    
        // Construct the URL with default filter values
        var url = '@Url.Action("Product", "Home", new { pageNum = 1, category = "All", primaryColor = "All", secondaryColor = "All" })';
        window.location.replace(url);
    });

</script>
