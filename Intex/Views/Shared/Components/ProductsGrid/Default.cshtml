@model ProductsListViewModel
<div class="filler" style="height: 84px;"></div>

	<!-- Product -->
	<section class="bg0 p-t-23 p-b-140">
	<div class="container">
	<div class="p-b-10">
		<h3 class="ltext-103 cl5">
			Product Overview
		</h3>
	</div>

	<div class="flex-w flex-sb-m p-b-52">
	<div class="flex-w flex-l-m filter-tope-group m-tb-10">
		<button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
			All Products
		</button>

		
	</div>

	<div class="flex-w flex-c-m m-tb-10">
		<div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
			<i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
			<i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
			Filter
		</div>

		@*<div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
			<i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
			<i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
			Search
		</div>*@
	</div>
				
	@*<!-- Search product -->
	<div class="dis-none panel-search w-full p-t-10 p-b-15">
		<div class="bor8 dis-flex p-l-15">
			<button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
				<i class="zmdi zmdi-search"></i>
			</button>

			<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Search">
		</div>	
	</div>*@

	<!-- Filter -->
	<div class="dis-none panel-filter w-full p-t-10">
		<div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
					<div class="filter-col2 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Items Per Page
                        </div>
                    
                        <select id="pageSize" class="form-control">
        	                
        	                
        	                @foreach (int size in ViewBag.PageSizes)
        	                {
        		                @if (Model.SelectedPageSize == size)
        		                {
        			                <option value="@size" selected="selected">@size</option>
        
        		                }
        		                else
        		                {
        			                <option value="@size">@size</option>
        		                }
        	                }
                        </select>
                    </div>
                
			
			<div class="filter-col2 p-r-15 p-b-27">
                <div class="mtext-102 cl2 p-b-15">
                    Category
                </div>
            
                <select id="categoryFilter" class="form-control">
	                
	                @if (Model.CurrentCategory == "All")
	                
	                {
		                <option value="All" selected>All</option>
	                }
	                else
	                {
		                <option value="All" >All</option>
	                }
	                
	                @foreach (var category in ViewBag.Categories)
	                {
		                @if (Model.CurrentCategory == category.description)
		                {
			                <option value="@category.description" selected="selected">@category.description</option>

		                }
		                else
		                {
			                <option value="@category.description">@category.description</option>
		                }
	                }
                </select>
            </div>
            
            <div class="filter-col3 p-r-15 p-b-27">
                <div class="mtext-102 cl2 p-b-15">
                    Primary Color
                </div>
            
                <select id="primaryColorFilter" class="form-control">
                	                @if (Model.SelectedPrimaryColor == "All")
                	                {
                		                <option value="All" selected>All</option>
                	                }
                	                else
                	                {
                		                <option value="All" >All</option>
                	                }
                	                @foreach (var color in ViewBag.PrimaryColor)
                	                {
                		                @if(Model.SelectedPrimaryColor == color)
                		                {
                			                <option value="@color" selected="selected">@color</option>
                		                }
                		                else
                		                {
                			                <option value="@color" >@color</option>
                		                }
                		                
                	                }
                                </select>


            </div>
            
            <div class="filter-col3 p-r-15 p-b-27">
                <div class="mtext-102 cl2 p-b-15">
                    Secondary Color
                </div>
            
                <select id="secondaryColorFilter" class="form-control">
	                @if (Model.SelectedSecondaryColor == "All")
	                {
		                <option value="All" selected>All</option>
	                }
	                else
	                {
		                <option value="All" >All</option>
	                }
	                @foreach (var color in ViewBag.SecondaryColor)
	                {
		                @if(Model.SelectedSecondaryColor == color)
		                {
			                <option value="@color" selected="selected">@color</option>
		                }
		                else
		                {
			                <option value="@color" >@color</option>
		                }
		                
	                }
                </select>

            </div>
			
			
			<div class="flex-c-m flex-w w-full p-t-25 p-b-20">
                <button id="applyFilterBtn" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                    Apply Filter
                </button>
                <button id="clearFilterBtn" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04 m-l-10">
                    Clear Filters
                </button>
            </div>
			
		</div>
	</div>
	</div>

	<div class="row isotope-grid" >
		@foreach (var product in Model.Products)
		{
			<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women" >
				<!-- Block2 -->
				<div class="block2">
					<div class="block2-pic hov-img0" style="height: 200px; width: 200px;">
						<img src="@product.img_link" alt="IMG-PRODUCT" style="object-fit: scale-down; height: 100%;">

						<a href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1" data-product-id="@product.product_id"
						   data-product-name="@product.name"
						   data-product-price="@product.price"
						   data-product-image="@product.img_link"
						   data-product-description="@product.description">
							Quick View
						</a>
					</div>

					<div class="block2-txt flex-w flex-t p-t-14">
						<div class="block2-txt-child1 flex-col-l ">
							<a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.product_id" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
								@product.name
							</a>

							<span class="stext-105 cl3">
								$@product.price.00
							</span>
						</div>

						<div class="block2-txt-child2 flex-r p-t-3">
							<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
								<img class="icon-heart1 dis-block trans-04" src="~/assets/images/icons/icon-heart-01.png" alt="ICON">
								<img class="icon-heart2 dis-block trans-04 ab-t-l" src="~/assets/images/icons/icon-heart-02.png" alt="ICON">
							</a>
						</div>
					</div>
				</div>
			</div>

					
		}
	</div>
			
	<div page-model="@Model.PaginationInfo" page-action="Product" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" page-url-category="@Model.CurrentCategory" class="btn-group pull-right"></div>

			

	</div>
	</section>
	
	<script>
		$('.js-show-modal1').on('click',function(e){
                e.preventDefault();
                var productId = $(this).data('product-id');
                var productName = $(this).data('product-name');
                var productPrice = $(this).data('product-price');
                var productImage = $(this).data('product-image');
                var productDescription = $(this).data('product-description');
                
                console.log("This working")
        
                $('#modalProductName').text(productName);
                $('#modalProductPrice').text('$' + productPrice.toFixed(2));
                $('#modalProductImage').attr('src', productImage);
                $('#modalProductDescription').text(productDescription);
				$('#modelProductImage2').attr('href', productImage);
				
                
                $('.js-modal1').addClass('show-modal1');
            });
        
            $('.js-hide-modal1').on('click',function(){
                $('.js-modal1').removeClass('show-modal1');
            });
	</script>
<script>

    // Add event handler for the "Apply Filter" button
    $('#applyFilterBtn').on('click', function () {
        var category = $('#categoryFilter').val(); // Replace with the appropriate element ID or class for the category filter
        var primaryColor = $('#primaryColorFilter').val(); // Replace with the appropriate element ID or class for the primary color filter
        var secondaryColor = $('#secondaryColorFilter').val(); // Replace with the appropriate element ID or class for the secondary color filter
		var pageSize = $('#pageSize').val(); // Replace with the appropriate element ID or class for the page size filter
        // Construct the URL with the selected filter values
        
        var url = '@Url.Action("Product", "Home", new { pageNum = 1, pageSize = "__pageSize__", category = "__category__", primaryColor = "__primaryColor__", secondaryColor = "__secondaryColor__" })';
                url = url.replace("__pageSize__", pageSize)
                		 .replace("__category__", category)
                         .replace("__primaryColor__", primaryColor)
                         .replace("__secondaryColor__", secondaryColor);
        window.location.replace(url);
    });
	
	$('#clearFilterBtn').on('click', function () {
        // Reset the filter values to default
        $('#categoryFilter').val('All');
        $('#primaryColorFilter').val('All');
        $('#secondaryColorFilter').val('All');
        var pageSize = $('#pageSize').val();
    
        // Construct the URL with default filter values
        var url = '@Url.Action("Product", "Home", new { pageNum = 1, pageSize =10,  category = "All", primaryColor = "All", secondaryColor = "All" })';
        window.location.replace(url);
    });

</script>
