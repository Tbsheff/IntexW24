@model EditProductViewModel

@{
    ViewData["Title"] = "Admin - Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="filler" style="height: 84px;"></div>

<div style="    margin: auto;
                     max-width: 75%;
                     background-color: #ecb75970;
                     padding: 1rem;
                     margin-bottom: 3rem;
                     border-radius: 10px;">
<h2 style="margin-bottom: 1rem;
                   text-align: center;">Edit Product</h2>

<form asp-action="EditProduct" method="post" style="max-width: 75%; margin: auto">

    <input type="hidden" asp-for="ProductId" />

    <div class="form-group">
        <label asp-for="Name">Product Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NumParts">Number of Parts</label>
        <input asp-for="NumParts" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ImgLink">Image Link</label>
        <input asp-for="ImgLink" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PrimaryColor">Primary Color</label>
        <input asp-for="PrimaryColor" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SecondaryColor">Secondary Color</label>
        <input asp-for="SecondaryColor" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category ID</label>
        <input asp-for="CategoryId" type="number" class="form-control" />
    </div>
<div style="    display: inline-flex;
                         gap: 3rem;
                         width: 100%;
                         justify-content: flex-start;
                         flex-direction: row-reverse;">
    <button type="submit" class="btn btn-success">Save Changes</button>
<button type="button" class="btn btn-secondary cancel-edit" onclick="history.back();">Cancel</button>
</div>

</form>
</div>